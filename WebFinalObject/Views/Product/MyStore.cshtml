@model IEnumerable<WebFinalExam.Models.Product>
@{
    ViewBag.Title = "我的賣場";
}

<h2>我的賣場</h2>
<a asp-action="Create" class="btn btn-success mb-3">新增商品</a>

<table class="table">
    <thead>
        <tr>
            <th>名稱</th>
            <th>價格</th>
            <th>庫存</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price.ToString("N0")</td>
                <td>@p.Stock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary">編輯</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
