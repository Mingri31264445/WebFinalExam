@model List<WebFinalExam.Models.Product>

@{
    ViewBag.Title = "首頁";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">熱門商品</h2>
    <a href="/Cart/ViewCart" class="btn btn-primary">前往購物車</a>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <a href="@Url.Action("Details", "Product", new { id = product.Id })">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;">
                </a>
                <div class="card-body">
                    <h5>@product.Name</h5>
                    <p class="text-danger">@product.Price.ToString("C")</p>
                    <a href="@Url.Action("AddToCart", "Cart", new { id = product.Id })" class="btn btn-primary">加入購物車</a>
                </div>
            </div>  
        </div>
    }
</div>
